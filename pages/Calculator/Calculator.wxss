/* Calculator.wxss */

/*按钮组*/
.btnGroup{
  display: flex;
  flex-direction: row;
}

/*按钮*/
.item{
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}

/*外层容器*/
.content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  box-sizing: border-box;
  padding-top: 10rpx;
}

/*计算结果*/
.screen{
  background-color: #ffffff;
  text-align: right;
  padding: 0 20rpx;
  width: 650rpx;
  height: 150rpx;
  line-height: 150rpx;
  margin: 30rpx;
  border: 1px solid #ddd;
  border-radius: 3px;
}

/*控制按钮*/
.orange{
  background-color: #f78d1d;
  color: #fef4e9;
  border: solid 1px #da7c0c;
}

/*数字按钮*/
.blue{
  background-color: #0095cd;
  color: #d9eef7;
  border: solid 1px #0076a3;
}

/*数字按钮按下状态*/
.btn-hover-num{
  background-color: #0094cc;opacity: 0.7;
}

/*控制按钮按下状态*/
.other-btn-hover{
  background-color: red;
}